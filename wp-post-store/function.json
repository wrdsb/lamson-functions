{
    "bindings": [
        {
            "name": "req",
            "type": "httpTrigger",
            "authLevel": "function",
            "direction": "in",
            "methods": [
                "post"
            ]
        },
        {
            "name": "postToStore",
            "type": "cosmosDB",
            "databaseName": "lamson",
            "collectionName": "wp-posts",
            "createIfNotExists": true,
            "connectionStringSetting": "wrdsb-lamson_COSMOSDB",
            "direction": "out"
        },
        {
            "name": "$return",
            "type": "http",
            "direction": "out"
        }
    ],
    "disabled": false
}
